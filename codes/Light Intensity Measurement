// Define pins
const int ldrPin = A0;     // LDR voltage divider output
const int ledPin = 9;      // LED connected to digital pin 9

void setup() {
  Serial.begin(9600);      // Initialize serial monitor
  pinMode(ledPin, OUTPUT); // Set LED pin as output
}

void loop() {
  int ldrValue = analogRead(ldrPin);         // Read value from LDR
  float voltage = ldrValue * (5.0 / 1023.0); // Convert to voltage

  Serial.print("LDR Value: ");
  Serial.print(ldrValue);
  Serial.print("  |  Voltage: ");
  Serial.print(voltage, 2);
  Serial.println(" V");

  // Light up LED if it's dark
  if (ldrValue < 500) {  // Adjust threshold as needed
    digitalWrite(ledPin, HIGH);
  } else {
    digitalWrite(ledPin, LOW);
  }

  delay(500); // Small delay
}
